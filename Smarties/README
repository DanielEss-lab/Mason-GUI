#openbabel, tqdm required
#xtb is optional, which is only available on LINUX
conda create -n smarties
conda activate smarties
conda config --add channels conda-forge
conda install openbabel tqdm xtb
#to execute after setup
python main.py
#will find final opted structures in output/xtbopt
#modify config.ini to play around with other templates
#
